@model List<EasyCashIdentityProject.EntityLayer.Concrete.CustomerAccount>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/CustomerLayout/Index.cshtml";
}

<h2>Index</h2>

<div class="right_col" role="main">
    <div class="page-title">
        <div class="title_left">
            <h3>Easy Cash Para Transfer Sayfası</h3>
        </div>
        <h2>Dolar - Türk Lirası: @ViewBag.UsdToTry</h2>
        <h2>Euro - Türk Lirası: @ViewBag.EurToTry</h2>
        <h2>Sterlin - Türk Lirası: @ViewBag.GbpToTry</h2>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="aranacak kelimeleri giriniz...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Ara!</button>
                    </span>
                </div>
            </div>
            <h3>Iban ve Hesap Bilgileri</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="">
                <div class="x_content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2>Pop Overs <small>Sessions</small></h2>
                                    <ul class="nav navbar-right panel_toolbox">
                                        <li>
                                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                            <ul class="dropdown-menu" role="menu">
                                                <li>
                                                    <a href="#">Settings 1</a>
                                                </li>
                                                <li>
                                                    <a href="#">Settings 2</a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a class="close-link"><i class="fa fa-close"></i></a>
                                        </li>
                                    </ul>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content bs-example-popovers">
                                    @foreach (var item in Model)
                                    {
                                        <div class="alert alert-success alert-dismissible fade in" role="alert">
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">Iban Copy</span>
                                            </button>
                                            <strong>Hesap Döviz Türü: @item.CustomerAccountCurrency</strong> Banka: @item.BankBranch -- Hesap No: @item.CustomerAccountNumber
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>