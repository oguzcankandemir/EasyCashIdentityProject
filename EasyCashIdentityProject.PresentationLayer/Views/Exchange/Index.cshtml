@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/CustomerLayout/Index.cshtml";
}

<div class="right_col"role="main">
    <div class="page-title">
        <div class="title_left">
            <h3>Easy Cash Para Transfer Sayfası</h3>
        </div>
        <h2>Dolar - Türk Lirası: @ViewBag.UsdToTry</h2>
        <h2>Euro - Türk Lirası: @ViewBag.EurToTry</h2>
        <h2>Sterlin - Türk Lirası: @ViewBag.GbpToTry</h2>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="aranacak kelimeleri giriniz...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Ara!</button>
                    </span>
                </div>
            </div>
            <h3>@DateTime.Now.ToShortDateString() - Döviz Kurları</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="">
                <div class="x_content">
                    <div class="row">
                        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div class="tile-stats">
                                <div class="icon">
                                    <i class="fa fa-caret-square-o-right"></i>
                                </div>
                                <div class="count">@ViewBag.UsdToTry</div>

                                <h3>Dolar - TL</h3>
                                <p>Güncel $ - ₺ Kuru</p>
                            </div>
                        </div>
                        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div class="tile-stats">
                                <div class="icon">
                                    <i class="fa fa-comments-o"></i>
                                </div>
                                <div class="count">@ViewBag.EurToTry</div>

                                <h3>Euro - TL</h3>
                                <p>Güncel € - ₺ Kuru</p>
                            </div>
                        </div>
                        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div class="tile-stats">
                                <div class="icon">
                                    <i class="fa fa-sort-amount-desc"></i>
                                </div>
                                <div class="count">@ViewBag.GbpToTry</div>

                                <h3>Sterlin - TL</h3>
                                <p>Güncel ß - ₺ Kuru</p>
                            </div>
                        </div>
                        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div class="tile-stats">
                                <div class="icon">
                                    <i class="fa fa-check-square-o"></i>
                                </div>
                                <div class="count">@ViewBag.UsdToEur</div>

                                <h3>Dolar - Euro</h3>
                                <p>Güncel $ - € Kuru</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

